@using TeknoramaUI.Areas.Administration.Models.MessageModel
@model List<MessageListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Subject</th>
        <th>Description</th>
        <th>Email</th>
        <th>Message Date</th>
        <th>Message Type</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Subject</th>
                <th>@item.Description</th>
                <th>@item.Email</th>
                <th>@item.MessageDate</th>
                <th>@item.MessageType</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="Message">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Message">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
<a href="/Administration/Message/Create" class="btn btn-primary">Add Message</a>
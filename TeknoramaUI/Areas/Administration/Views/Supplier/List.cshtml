@using TeknoramaUI.Areas.Administration.Models.SupplierModel;
@model List<SupplierListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Company Name</th>
        <th>Contact Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Adress</th>
        <th>City</th>
        <th>Country</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.CompanyName</th>
                <th>@item.ContactName</th>
                <th>@item.PhoneNumber</th>
                <th>@item.Email</th>
                <th>@item.Address</th>
                <th>@item.City</th>
                <th>@item.Country</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="Supplier">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Supplier">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
<a href="/Administration/Supplier/Create" class="btn btn-primary">Add Supplier</a>
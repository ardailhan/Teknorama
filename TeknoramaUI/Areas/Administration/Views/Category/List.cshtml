@using TeknoramaUI.Areas.Administration.Models.CategoryModel;
@model List<CategoryListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Category Name</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.CategoryName</th>
                <th>@item.Description</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="Category">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Category">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There are no data found</td>
        </tr>
    }
</table>
<a href="/Administration/Category/Create" class="btn btn-primary">Add Category</a>
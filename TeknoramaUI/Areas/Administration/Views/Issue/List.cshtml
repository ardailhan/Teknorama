@using TeknoramaUI.Areas.Administration.Models.IssueModel
@model List<IssueListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Subject</th>
        <th>Answer</th>
        <th>IssueStatus</th>
        <th>OpenDate</th>
        <th>Email</th>
        <th>App User</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Subject</th>
                <th>@item.Answer</th>
                <th>@item.IssueStatus</th>
                <th>@item.OpenDate.ToLongDateString()</th>
                <th>@item.Email</th>
                <th>@item.AppUserId</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="Issue">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Issue">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
<a href="/Administration/Issue/Create" class="btn btn-primary">Add Issue</a>
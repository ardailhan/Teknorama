@using TeknoramaUI.Areas.Administration.Models.OrderModel
@model List<OrderListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Ship Country</th>
        <th>Ship City</th>
        <th>Ship Address</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Total Price</th>
        <th>Order Date</th>
        <th>Order Status</th>
        <th>App User</th>
        <th>Employee</th>
        <th>Shipper</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.ShipCountry</th>
                <th>@item.ShipCity</th>
                <th>@item.ShipAddress</th>
                <th>@item.UserName</th>
                <th>@item.Email</th>
                <th>@item.TotalPrice</th>
                <th>@item.OrderDate.Date</th>
                <th>@item.OrderStatus</th>
                <th>@item.AppUser.UserName</th>
                <th>@item.Employee.FirstName</th>
                <th>@item.Shipper.CompanyName</th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
@using TeknoramaUI.Areas.Administration.Models.AppuserModel;
@model List<AppUserListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>App User Name</th>
        <th>Email</th>
        <th>Active</th>
        <th>App Role</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.UserName</th>
                <th>@item.Email</th>
                <th>@item.Active</th>
                <th>@item.AppRole.Definition</th>
                <th colspan="2">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="AppUser">Update</a>
                    &nbsp;&nbsp;
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="AppUser">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There are no data found</td>
        </tr>
    }
</table>
<button href="/Administration/AppUser/Create" class="btn btn-primary">New App User</button>
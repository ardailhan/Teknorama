@using TeknoramaUI.Areas.Administration.Models.ProductModel;
@model List<ProductListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Unit Price</th>
        <th>Units In Stock</th>
        @*<th>Image</th>*@
        <th>Category</th>
        <th>Supplier</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.ProductName</th>
                <th>@item.UnitPrice</th>
                <th>@item.UnitsInStock</th>
                @*<th>@item.ImagePath</th>*@
                <th>@item.Category.CategoryName</th>
                <th>@item.Supplier.CompanyName</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="Product">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Product">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
<a href="/Administration/Product/Create" class="btn btn-primary">Add Product</a>
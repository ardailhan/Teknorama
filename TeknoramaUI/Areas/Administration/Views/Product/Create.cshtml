@model TeknoramaUI.Areas.Administration.Models.ProductModel.ProductCreateRequestModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>New Product Page</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.ProductName)
    @Html.TextBoxFor(x=>x.ProductName, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x=>x.UnitPrice)
    @Html.TextBoxFor(x=>x.UnitPrice, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x=>x.UnitsInStock)
    @Html.TextBoxFor(x=>x.UnitsInStock, new{@class = "form-control"})
    <br />
    @*@Html.LabelFor(x=>x.ImagePath)
    <input type="file" name="ImagePath" />
    <br />*@
    @Html.LabelFor(x=>x.CategoryId)
    @Html.TextBoxFor(x=>x.CategoryId, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x=>x.SupplierId)
    @Html.TextBoxFor(x=>x.SupplierId, new{@class = "form-control"})
    <br />
    <button class="btn btn-info">Save</button>
</form>
@using TeknoramaUI.Models.BasketItemModel;
@model List<BasketItemListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Unit Price</th>
        <th>Units In Stock</th>
        <th>Category</th>
        <th>Category Details</th>
        <th>Quantity</th>
        <th>Basket</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Product.ProductName</th>
                <th>@item.Product.UnitPrice</th>
                <th>@item.Product.UnitsInStock</th>
                <th>@item.Product.Category.CategoryName</th>
                <th>@item.Product.Category.Description</th>
                <th>@item.Product.Category.Description</th>
                <th>@item.Quantity</th>
                <th>@item.Basket</th>
                <th colspan="1">
                    <a class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id" asp-action="Update" asp-controller="BasketItem">Update</a>
                </th>
                <th colspan="2">
                    <a class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="BasketItem">Delete</a>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-danger">There is no any data..!</td>
        </tr>
    }
</table>
<a href="/BasketItem/Create" class="btn btn-primary">Add to Basket</a>